; (function ($, elementor) {
    
    $(window).on("elementor/frontend/init", function () {

        elementorFrontend.hooks.addAction(
            "frontend/element_ready/sixam-template.default",
            function ($scope) {

                $('.teplate-wrapper .sec_edit_container').find('a').click(function (e) {
                    e.preventDefault();
                    var url = $(this).attr('href');
                    window.open(url, '_blank');
                });

                $(document).ready(function () {

                    $('#temp_sticky .scrollbar').css('background', 'linear-gradient(180deg, #7ACAC0 10%, #F3F3F3 0%)');

                    var targetElement = $scope.find('.teplate-wrapper');

                    var temp_section_height = targetElement.height();

                    var targetOffset = targetElement.offset().top;

                    $(window).on('scroll', function () {
                        
                        var scrollPosition = $(this).scrollTop();

                        var section_scrolled = scrollPosition - targetOffset;
                        
                        var fill_percentage = Math.round((section_scrolled / temp_section_height) * 100) + 10;
						                                                
                        if (9 < fill_percentage && fill_percentage < 101) {
							
							$('#temp_sticky .scrollbar').css('background', 'linear-gradient(180deg, #7ACAC0 '+fill_percentage+'%, #F3F3F3 0%)');
                        }

                    });

                });
            }
        );
    });

    

})(jQuery, window.elementorFrontend);